<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="no-js">
<head>
    <script>document.querySelector('html').classList.remove('no-js');</script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Raport{% endblock %}</title>
    <link rel="icon" href="{{ asset('favicon.svg') }}">
    <link href="{{ asset('bundle/style.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body{% block body_attrs %}{% endblock %}>
    <mwc-linear-progress progress="0" wc-ready class="app-progress active" id="appProgress"></mwc-linear-progress>
    {% block flashes %}
        {% for message in app.flashes('site_success') %}
            <app-toastr duration="10000" type="success" dismissible message="{{ message }}"></app-toastr>
        {% endfor %}
        {% for message in app.flashes('site_error') %}
            <app-toastr duration="10000" type="error" dismissible message="{{ message }}"></app-toastr>
        {% endfor %}
    {% endblock %}
    {% block body %}{% endblock %}
    <script src="{{ asset('bundle/app.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
