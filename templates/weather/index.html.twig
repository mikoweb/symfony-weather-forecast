{% extends 'layout.html.twig' %}

{% block drawer_content %}
    {{ form_start(form, {'attr': {'class': 'form-behavior'}}) }}
    <div class="report-filter">
        {{ form_row(form.country) }}
        {{ form_row(form.city) }}
        <div class="form-row report-filter__button">
            {{ form_widget(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block content %}
    {% if forecast is defined %}
        <section>
            <h3 class="h3 panel-title">Prognoza dla {{ country }} {{ city }}</h3>
            <app-rwd-table wc-lazy>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center"></th>
                            <th scope="col" class="text-center">Wartość</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row" class="text-center">Temperatura</th>
                            <td class="text-center">{{ forecast.temperature|number_format }}°C</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-center">Ciśnienie</th>
                            <td class="text-center">{{ forecast.pressure|number_format }} hPa</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-center">Wilgotność</th>
                            <td class="text-center">{{ forecast.humidity|number_format }}%</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-center">Zachmurzenie</th>
                            <td class="text-center">{{ forecast.cloudiness|number_format }}%</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-center">Prędkość wiatru</th>
                            <td class="text-center">{{ forecast.wind.speed|number_format }} m/s</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-center">Kierunek wiatru</th>
                            <td class="text-center">{{ forecast.wind.deg|number_format }}°</td>
                        </tr>
                    </tbody>
                </table>
            </app-rwd-table>
        </section>
    {% endif %}
{% endblock %}
